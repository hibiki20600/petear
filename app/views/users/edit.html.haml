#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :image
          .field-image
            = f.label :image do
              = fa_icon 'picture-o', class: 'account_icon'
              = f.file_field :image, class: "hidden-account-image", autofocus: true
            =image_tag current_user.image, size: "100x100", alt: "image", class: "field-image__user_icon"
        .field
          .field-label
            = f.label :comment
          .field-input
            = f.text_field :comment, autofocus: true, row: '10'
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'btn'
